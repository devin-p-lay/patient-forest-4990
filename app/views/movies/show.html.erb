<h1><%= @movie.title %></h1>
<p>Year: <%= @movie.creation_year %> </p>
<p>Genre: <%= @movie.genre %> </p>

<section id="Actors">
  <h4>Actors from youngest to oldest: </h4>
  <% @movie.order_actors.each do |actor| %>
    <p><%= actor.name%></p>
  <% end %>
  <h4>Average Actor Age: <%= "#{@movie.average_age}" %></h4>
  <h4>Add an actor to this movie:</h4>
  <%= form_with model: @movies, method: :post, local: true do |f| %>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
    <%= f.label :name, "Age" %>
    <%= f.text_field :age %>
    <%= f.submit "Submit" %>
  <% end %>
</section>